#!/bin/bash

#==============================================================================
# Nome     : extrair
#            Copyright (c) 2022 Ícaro Vidal Freire 
#------------------------------------------------------------------------------
# Descrição: Função para extrair diferentes tipos de arquivos
# Licença  : GNU GPLv3 (https://www.gnu.org/licenses/gpl-3.0.txt)
# Versão   : 0.1.0
#------------------------------------------------------------------------------
# Como usar: Digitar no terminal 'extrair nome-do-arquivo'
#==============================================================================

# construindo a função --------------------------------------------------------

extrair() {
  if [ -f $1 ]; then
    case "$1" in 
      *.tar.bz2)   tar xjf $1     ;;
      *.tar.gz)    tar xzf $1     ;;
      *.tar.xz)    tar xf $1      ;;
      *.bz2)       bunzip2 $1     ;;
      *.rar)       rar x $1       ;;
      *.gz)        gunzip $1      ;;
      *.tar)       tar xf $1      ;;
      *.tbz2)      tar xjf $1     ;;
      *.tgz)       tar xzf $1     ;;
      *.zip)       unzip $1       ;;
      *.Z)         uncompress $1  ;;
      *.7z)        7z x $1        ;;
      *)           echo "'$1' não pode ser extraído por extrair()" ;;
    esac
    else
      echo "'$1' não é um arquivo válido"
  fi
}

# rodando a função ------------------------------------------------------------

extrair

# fim do script ---------------------------------------------------------------

exit 
